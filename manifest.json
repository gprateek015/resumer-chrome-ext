{
  "manifest_version": 3,
  "name": "Resumer",
  "version": "2.0",
  "description": "Download the most ATS friendly resume for any job description",
  "permissions": ["activeTab", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
